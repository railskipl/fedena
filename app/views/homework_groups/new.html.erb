<div id="content-header">
 <img src="/images/homework/button_homeworks.gif" alt="homework" />
  <h1>Homeworks</h1>
  <h3>New homework</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

<div class="bread_crumb">
        <%= link_to 'Courses', courses_path %> &raquo;
        <%= link_to @course.full_name, @course %> &raquo;
        <%= link_to "Batch #{@batch.name}", [@course, @batch] %> &raquo;
        <%= link_to "homeworks", batch_homework_groups_path(@batch) %> &raquo;
       New homework
        </div>
    
    
    <div class="box">

   <div id="flash"></div>
    <div id="homework-form">

      <%= error_messages_for :homework_group %>
      <% form_remote_for :homework_option, :url => {:controller=>'homework',:action => 'update_homework_form',:batch=>@batch} do |form| %>
        <div class="label-field-pair">
          <label for="homework_name">Name</label>
          <% if params[:ename].nil?  %>
          <% @ename = "" %>
          <% else %>
          <% @ename = params[:ename] %>
          <% end  %>
          <div class="text-input-bg"><%= form.text_field :name, :value=>@ename%></div>
        </div>
        <div class="label-field-pair">
          <label for="homework_type">Homework Type</label>
          <div class="text-input-bg"><%= select :homework_option,:homework_type,['Marks','Grades','MarksAndGrades'] %></div>
        </div>
        <%= submit_tag "", :value => "â–º Save", :class => "submit_button" %>
        <%  #  form.submit("Save") %>
      <%end%>
    </div>

    <div class="extender"></div>


  </div></div>